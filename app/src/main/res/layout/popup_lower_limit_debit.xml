<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:background="@mipmap/icon_lower_limit_debit_bg">

        <TextView
            android:id="@+id/popup_top_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_36dp"
            android:layout_marginTop="@dimen/dimen_35dp"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            android:text="Swipe right to indicate interest"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/popup_top_tip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_24dp"
            android:layout_marginTop="@dimen/dimen_17dp"
            android:fontFamily="@font/cabin_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Both parties need to like each other to successfully match. Give it a try!"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_top_title" />

        <ImageView
            android:id="@+id/popup_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_lower_limit_debit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_top_tip" />

        <TextView
            android:id="@+id/popup_lets_go"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginHorizontal="@dimen/dimen_23dp"
            android:layout_marginBottom="@dimen/dimen_21dp"
            android:background="@drawable/selector_button_isenable"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:text="Letâ€™s go!"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>