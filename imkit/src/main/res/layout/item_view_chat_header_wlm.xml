<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHeadImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="3dp"
        android:background="@drawable/shape_ab27ee_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/icon_min_red_heart"
        app:layout_constraintBottom_toBottomOf="@+id/ivHeadImg"
        app:layout_constraintEnd_toEndOf="@+id/ivHeadImg" />

    <TextView
        android:id="@+id/tv_wlm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/cabin_bold"
        android:text="@string/your_admirer"
        android:textColor="@color/color_44F3C4"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/ivHeadImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWlmContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:alpha="0.48"
        android:ellipsize="end"
        android:fontFamily="@font/cabin_medium"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_wlm_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_wlm_title"
        tools:text="@string/enable_system_notifications_content" />
    <TextView
        android:id="@+id/tvWlmTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.48"
        android:textColor="@color/color_333333"
        android:textSize="12sp"
        android:gravity="end"
        android:fontFamily="@font/intermedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11:00" />

</androidx.constraintlayout.widget.ConstraintLayout>