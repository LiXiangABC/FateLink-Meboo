            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.my.turnons.ChooseTurnOnsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.index.flash.FlashChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.like.ILikeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.my.benefit.PasswordExchangeActivity"
