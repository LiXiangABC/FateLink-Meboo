<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/christmas_countdown_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_start_christmas"
        android:visibility="gone">
        <TextView
            android:id="@+id/christmas_countdown"
            android:layout_width="@dimen/dimen_65dp"
            android:layout_height="@dimen/dimen_29dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp"
            android:fontFamily="@font/interregular"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_35dp"
            android:layout_marginEnd="@dimen/dimen_25dp"
            android:background="@drawable/shape_transfer_radius_14"
            android:text="Skip 3"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/img_organic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_start_bg"
        android:adjustViewBounds="true"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/network_error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_138dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@mipmap/icon_index_network_error"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/something_went_wrong"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:textColor="@color/color_202323"
            android:textSize="@dimen/dimen_20sp"
            android:fontFamily="@font/intersemibold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/color_84868E"
            android:text="@string/network_error_tip"
            android:layout_marginTop="@dimen/dimen_10dp"/>
        <TextView
            android:id="@+id/network_error_try_again"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="@dimen/dimen_52dp"
            android:background="@drawable/shape_solid_black_radius_18"
            android:text="@string/try_again"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_40dp"/>
    </LinearLayout>
    <xyz.doikki.videoplayer.player.VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

</RelativeLayout>
