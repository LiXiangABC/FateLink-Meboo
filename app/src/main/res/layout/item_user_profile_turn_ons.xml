<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_marginBottom="@dimen/dimen_10dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/turn_ons_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_marginTop="50dp"
        android:layout_height="@dimen/dimen_135dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_solid_gray_radius_12"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/turn_ons_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_14sp"
                android:gravity="center"
                android:textColor="@color/color_202323"
                android:fontFamily="@font/cabin_semibold"
                />
            <TextView
                android:id="@+id/turn_ons_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/dimen_12sp"
                android:fontFamily="@font/cabin_regular"
                android:gravity="center_horizontal"
                />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_turn_ons"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_27dp"
        android:layout_marginEnd="@dimen/dimen_27dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>