<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_edit_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="157dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="@dimen/dimen_20dp"
            app:riv_corner_radius_top_right="@dimen/dimen_20dp" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/cabin_medium"
            android:text="@string/my_interests"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/dimen_44dp"
            android:layout_height="@dimen/dimen_44dp"
            android:paddingTop="@dimen/dimen_24dp"
            android:paddingEnd="@dimen/dimen_22dp"
            android:src="@mipmap/icon_black_close_normal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.crush.view.TagCloudView
            android:id="@+id/add_interests_tag_cloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:tcvBackground="@drawable/shape_interest_unselect_bg"
            app:tcvBorder="@dimen/dimen_6dp"
            app:tcvTextPaddingLeft="20"
            app:tcvTextPaddingRight="20"
            app:tcvTextPaddingTop="10"
            app:tcvTextPaddingBottom="10"
            app:tcvCanTagClick="true"
            app:tcvItemBorderVertical="6dp"
            app:tcvShowEndText="false"
            app:tcvSingleLine="false"
            app:tcvTextColor="@color/black"
            app:tcvTextSize="14" />


        <TextView
            android:id="@+id/dialog_save"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginHorizontal="@dimen/dimen_28dp"
            android:layout_marginTop="@dimen/dimen_31dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/shape_solid_pink_gradient_radius_30"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/color_001912"
            android:textSize="@dimen/dimen_20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_interests_tag_cloud" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
