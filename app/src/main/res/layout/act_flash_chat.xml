<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_out_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource"
    android:background="@mipmap/icon_flash_chat_bg">
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/dimen_58dp"
        android:layout_height="@dimen/dimen_58dp"
        android:src="@mipmap/icon_black_close_normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_35dp"
        />
    <TextView
        android:id="@+id/flash_chat_user_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:textSize="@dimen/dimen_30sp"
        android:textColor="@color/color_0B6B9D"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_39dp"
        android:layout_marginEnd="@dimen/dimen_35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_close"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/flash_chat_user_avatar"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:riv_corner_radius="@dimen/dimen_24dp"
        android:layout_marginStart="@dimen/dimen_39dp"
        android:layout_marginEnd="@dimen/dimen_39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flash_chat_user_title"
        app:layout_constraintBottom_toTopOf="@+id/start_flash_chat_container"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:scaleType="centerCrop"
        />
    
    <ImageView
        android:layout_width="@dimen/dimen_110dp"
        android:layout_height="@dimen/dimen_110dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-20dp"
        app:layout_constraintBottom_toBottomOf="@id/flash_chat_user_avatar"
        android:src="@mipmap/ic_chatting_flower"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lo_lightning_love"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:lottie_fileName="lightning_love.json"
        app:layout_constraintRight_toRightOf="@+id/flash_chat_user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/flash_chat_user_avatar"
        android:layout_marginEnd="-27dp"
        android:layout_marginBottom="-23dp"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/start_flash_chat_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:background="@drawable/shape_solid_buttom_radius_30"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_70dp"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_40dp">
        <ImageView
            android:layout_width="@dimen/dimen_22dp"
            android:layout_height="@dimen/dimen_22dp"
            android:src="@mipmap/icon_send_unedited_white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_chatting"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/interbold"
            android:layout_marginStart="@dimen/dimen_14dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>