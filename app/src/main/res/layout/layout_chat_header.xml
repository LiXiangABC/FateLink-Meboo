<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_chats"
            android:layout_width="@dimen/dimen_66dp"
            android:layout_height="@dimen/dimen_28dp"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:src="@mipmap/icon_chats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.crush.view.ViewMinDown
            android:id="@+id/view_chat_dowm"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            tools:layout_height="@dimen/dimen_26dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_container"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_chats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dimen_8dp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lo_ring_the_bell"
                android:layout_width="@dimen/dimen_48dp"
                android:layout_height="@dimen/dimen_48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:lottie_autoPlay="true"
                android:layout_marginVertical="@dimen/dimen_14dp"
                app:lottie_loop="true"
                app:lottie_fileName="ring_the_bell.json"
                android:layout_marginStart="@dimen/dimen_20dp"
                />
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/lo_ring_the_bell"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:textSize="@dimen/dimen_16sp"
                android:fontFamily="@font/interbold"
                android:textColor="@color/color_333333"
                android:text="@string/enable_system_notifications"
                />
            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/lo_ring_the_bell"
                app:layout_constraintTop_toBottomOf="@+id/notification_title"
                app:layout_constraintRight_toLeftOf="@+id/img_notification_close"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:textSize="@dimen/dimen_12sp"
                android:textColor="@color/color_333333"
                android:alpha="0.48"
                android:fontFamily="@font/interregular"
                android:text="@string/enable_system_notifications_content"
                />
            <ImageView
                android:id="@+id/img_notification_close"
                android:layout_width="@dimen/dimen_43dp"
                android:layout_height="@dimen/dimen_43dp"
                android:src="@mipmap/icon_black_close_no_stroke"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/dimen_13dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.crush.view.ViewChatHeaderWlm
            android:id="@+id/viewChatHeaderWlm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/notification_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:src="@mipmap/icon_message"
        tools:visibility="visible"
        android:visibility="gone"/>

    <View
        android:layout_width="@dimen/dimen_9dp"
        android:layout_height="@dimen/dimen_9dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_17dp"
        android:layout_marginRight="@dimen/dimen_17dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/shape_red_dot"
        />
</RelativeLayout>