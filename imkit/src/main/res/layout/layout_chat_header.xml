<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_chats"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_chats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/color_001912" />
<!--        <com.crush.view.ViewMinDown-->
<!--            android:id="@+id/view_chat_dowm"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:visibility="gone"-->
<!--            tools:visibility="visible"-->
<!--            tools:layout_height="26dp"-->
<!--            android:layout_marginTop="40dp"-->
<!--            android:layout_marginEnd="16dp"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notification_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_chats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_push_bg"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lo_ring_the_bell"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:lottie_autoPlay="true"
                android:layout_marginVertical="14dp"
                app:lottie_loop="true"
                app:lottie_fileName="ring_the_bell.json"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/lo_ring_the_bell"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:fontFamily="@font/interbold"
                android:textColor="@color/white"
                android:text="@string/enable_system_notifications"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/lo_ring_the_bell"
                app:layout_constraintTop_toBottomOf="@+id/notification_title"
                app:layout_constraintRight_toLeftOf="@+id/img_notification_close"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/interregular"
                android:text="@string/enable_system_notifications_content"
                />
            <ImageView
                android:id="@+id/img_notification_close"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/icon_white_close"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="13dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <io.rong.imkit.widget.ViewChatHeaderWlm
            android:id="@+id/viewChatHeaderWlm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/notification_container"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>