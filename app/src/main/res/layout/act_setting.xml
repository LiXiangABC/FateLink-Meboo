<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/icon_my_profile_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_black_back_normal" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_48dp"
            android:fontFamily="@font/cabin_medium"
            android:textColor="#1A1B1E"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/settings" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.crush.view.RoundImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/dimen_86dp"
        android:layout_height="@dimen/dimen_86dp"
        app:radius="@dimen/dimen_12dp"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/viewTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_43dp"
        />
    <TextView
        android:id="@+id/txt_version_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:fontFamily="@font/cabin_regular"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/img_user_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/dimen_16sp" />
    <LinearLayout
        android:id="@+id/container_my_account"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_64dp"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/shape_solid_white_radius_12"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_version_code"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingEnd="@dimen/dimen_12dp">

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:textColor="@color/color_202323"
            android:fontFamily="@font/cabin_regular"
            android:text="@string/my_account"
            android:textSize="@dimen/dimen_15sp" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:src="@mipmap/icon_gray_right_arrow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginEnd="@dimen/dimen_12dp"
        android:background="@drawable/shape_solid_white_radius_12"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_my_account">

        <LinearLayout
            android:id="@+id/container_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:fontFamily="@font/cabin_regular"
                android:text="@string/privacy_policy"
                android:textColor="@color/color_202323"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@mipmap/icon_gray_right_arrow"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_terms"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_weight="1"
                android:textColor="@color/color_202323"
                android:fontFamily="@font/interregular"
                android:text="@string/terms"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@mipmap/icon_gray_right_arrow"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>