<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fc_guide_lottie"
        android:background="@mipmap/icon_flash_chat_guide"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_14dp"
            android:fontFamily="@font/interregular"
            android:text="@string/flash_chat_guide_tip"
            android:textColor="@color/color_0B6B9D"
            android:textSize="@dimen/dimen_15sp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/dialog_logo"
            app:layout_constraintTop_toTopOf="@+id/dialog_logo"
            android:layout_marginEnd="@dimen/dimen_16dp"/>

        <ImageView
            android:id="@+id/dialog_logo"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_39dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:src="@mipmap/icon_flash_chat_guide_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fc_guide_lottie"
        android:layout_width="@dimen/dimen_42dp"
        android:layout_height="@dimen/dimen_42dp"
        app:lottie_fileName="flash_chat.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginBottom="2.5dp"
        android:padding="@dimen/dimen_0dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>