<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/non_organic_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/img_non_organic_text"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_62dp"
            android:src="@mipmap/icon_pass_non_organic_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/icon_pass_down_finger"
            android:scaleType="centerCrop"
            android:paddingTop="@dimen/dimen_8dp"
            android:paddingBottom="@dimen/dimen_7dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_63dp"
            android:background="@drawable/shape_99000000_radius_15"
            android:layout_marginTop="75dp"
            />
        <ImageView
            android:id="@+id/icon_pass_down_finger"
            android:layout_width="@dimen/dimen_85dp"
            android:layout_height="@dimen/dimen_100dp"
            android:src="@mipmap/icon_pass_down_finger"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/organic_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_62dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/shape_99000000_radius_15"
        android:layout_marginHorizontal="@dimen/dimen_8dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            android:src="@mipmap/icon_pass_organic_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/dimen_63dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginVertical="@dimen/dimen_9dp"
            />
        <ImageView
            android:layout_width="@dimen/dimen_57dp"
            android:layout_height="@dimen/dimen_37dp"
            android:src="@mipmap/icon_pass_finger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_58dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>