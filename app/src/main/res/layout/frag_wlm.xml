<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_app_main">

    <View
        android:id="@+id/index_top_bg"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@drawable/shape_index_top_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/index_top_bg" />

    <ImageView
        android:id="@+id/title_wlm"
        android:layout_width="150dp"
        android:layout_height="@dimen/dimen_19dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:src="@mipmap/icon_wlm_title_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/color_001912" />

    <ImageView
        android:id="@+id/wlm_tips_dialog_show"
        android:layout_width="@dimen/dimen_47dp"
        android:layout_height="@dimen/dimen_47dp"
        android:src="@mipmap/icon_wlm_controls"
        android:paddingHorizontal="@dimen/dimen_15dp"
        android:paddingVertical="@dimen/dimen_15dp"
        app:layout_constraintLeft_toRightOf="@+id/title_wlm"
        app:layout_constraintBottom_toBottomOf="@+id/title_wlm"
        app:layout_constraintTop_toTopOf="@+id/title_wlm"
        app:tint="@color/color_001912" />
    <TextView
        android:id="@+id/txt_wlm_number"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:fontFamily="@font/cabin_regular"
        android:textColor="@color/color_9C9FA6"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/top_right_container"
        app:layout_constraintTop_toBottomOf="@+id/title_wlm"
        tools:text="6 people have already liked you ðŸ’—" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_wlm">

        <com.crush.view.ViewMinDown
            android:id="@+id/view_wlm_dowm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_height="@dimen/dimen_26dp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/txt_get_premium_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_wlm_premium_button"
            android:drawablePadding="@dimen/dimen_4dp"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/dimen_10dp"
            android:paddingVertical="@dimen/dimen_5dp"
            android:text="@string/premium"
            android:textColor="@color/color_001912"
            android:textSize="@dimen/dimen_12sp"
            android:visibility="gone"
            app:drawableStartCompat="@mipmap/icon_user_member_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/wlm_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_wlm_number"
        app:srlDragRate="0.3">

        <com.crush.view.MyClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/who_like_me_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:overScrollMode="never" />


        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:id="@+id/wlm_refresh_layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextNothing="@string/wlm_expire_tips"
            app:srlTextSizeTitle="@dimen/dimen_12sp" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_empty"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_wlm"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_wlm_empty"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_210dp"
            android:layout_marginHorizontal="@dimen/dimen_38dp"
            android:src="@mipmap/icon_empty_wlm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_empty_tip"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginHorizontal="@dimen/dimen_44dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="center"
            android:text="@string/wlm_empty_tip"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_wlm_empty" />

        <TextView
            android:id="@+id/txt_to_edit"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginStart="@dimen/dimen_88dp"
            android:layout_marginTop="@dimen/dimen_52dp"
            android:layout_marginEnd="@dimen/dimen_88dp"
            android:background="@drawable/shape_solid_pink_radius_26"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            android:text="@string/see_your_admirers"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_empty_tip" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_can_like_size_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:src="@mipmap/icon_wlm_size"
            android:layout_marginEnd="@dimen/dimen_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            />
        <TextView
            android:id="@+id/txt_wlm_size"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_red_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_15dp"
            tools:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/cabin_regular"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
