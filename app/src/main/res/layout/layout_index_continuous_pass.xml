<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_index_continuous_pass_bg"
    >
    <com.crush.view.RoundImageView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:src="@mipmap/icon_pass_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        app:radius="@dimen/dimen_20dp"
        android:layout_margin="@dimen/dimen_1dp"
        />
    <TextView
        android:id="@+id/txt_continuous_pass_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:textColor="@color/color_B954FF"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/dimen_15dp"
        android:fontFamily="@font/cabin_medium"
        />
    <ImageView
        android:id="@+id/img_pass_title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_59dp"
        android:src="@mipmap/icon_pass_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dimen_29dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dimen_53dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txt_continuous_pass_top_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_24sp"
        android:textColor="@color/color_B954FF"
        android:text="@string/i_m_not_into_their"
        app:layout_constraintTop_toBottomOf="@+id/img_pass_title"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_29dp"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_continuous_pass_top_tips"
        app:layout_constraintBottom_toTopOf="@+id/txt_continuous_pass_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        >
        <LinearLayout
            android:id="@+id/rg_feedback_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </androidx.core.widget.NestedScrollView>
    <ImageView
        android:layout_width="@dimen/dimen_52dp"
        android:layout_height="@dimen/dimen_50dp"
        android:src="@mipmap/icon_pass_peach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_pass_title"
        android:layout_marginTop="@dimen/dimen_48dp"
        android:layout_marginEnd="@dimen/dimen_30dp"/>

    <ImageView
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_48dp"
        android:src="@mipmap/icon_pass_eggplant"
        app:layout_constraintBottom_toTopOf="@+id/txt_continuous_pass_tips"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginBottom="@dimen/dimen_9dp"/>
    <TextView
        android:id="@+id/txt_continuous_pass_tips"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_continuous_pass_feedback"
        android:text="@string/index_continuous_pass_tips"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_21dp"
        android:layout_marginEnd="@dimen/dimen_22dp"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:textColor="@color/color_B954FF"
        android:textSize="@dimen/dimen_14sp"
        android:fontFamily="@font/cabin_regular"
        />
    <TextView
        android:id="@+id/txt_continuous_pass_feedback"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/selector_continuous_pass_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_29dp"
        android:layout_marginBottom="@dimen/dimen_29dp"
        android:enabled="false"
        android:text="@string/feedback_to_auramix"
        android:gravity="center"
        android:textSize="@dimen/dimen_18sp"
        android:fontFamily="@font/cabin_semibold"
        android:textColor="@color/selector_continuous_pass_button_color"
        />
</androidx.constraintlayout.widget.ConstraintLayout>