<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_half_top_solid_black_radius_20"
    android:layout_marginTop="68dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_back_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_photo_down_back"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/my_photo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_back_container"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:paddingEnd="13dp"
        >
        <TextView
            android:id="@+id/my_photo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="My Photo"
            android:fontFamily="@font/interbold"
            />
        <View
            android:id="@+id/my_photo_line"
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_solid_white_radius_2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/private_album_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_back_container"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:paddingEnd="13dp"
        app:layout_constraintLeft_toRightOf="@+id/my_photo_container"
        >
        <TextView
            android:id="@+id/private_album_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#9C9FA6"
            android:text="Private Album"
            android:fontFamily="@font/interregular"
            />
        <View
            android:id="@+id/private_album_line"
            android:layout_width="18dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:visibility="invisible"
            android:background="@drawable/shape_solid_white_radius_2"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_photo_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_photo_container"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/private_album_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_photo_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/img_empty_logo"
            android:layout_width="0dp"
            android:layout_height="163dp"
            android:src="@drawable/icon_private_photo_empty"
            android:layout_marginTop="97dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_private_albums"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/interbold"
            android:text="@string/buy_private_album"
            app:layout_constraintTop_toBottomOf="@+id/img_empty_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@+id/text_private_albums"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="84dp"
            android:text="Own a private album"
            android:background="@drawable/shape_solid_yellow_radius_24"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/intersemibold"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>