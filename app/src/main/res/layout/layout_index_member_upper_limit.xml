<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_60dp"
    android:background="@mipmap/icon_upper_limit_bg">
    <ImageView
        android:id="@+id/limit_title"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:src="@mipmap/icon_limit_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginHorizontal="@dimen/dimen_35dp"
        />
    <TextView
        android:id="@+id/limit_tip"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="Please come back tomorrow, more amazing people are waiting for you to light the spark!"
        android:textSize="@dimen/dimen_16sp"
        android:fontFamily="@font/cabin_medium"
        app:layout_constraintTop_toBottomOf="@+id/limit_title"
        android:layout_marginHorizontal="@dimen/dimen_33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:gravity="center"
        android:textColor="@color/color_666666"
        />
    <com.crush.view.SnapUpCountDownTimerView
        android:id="@+id/limit_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limit_tip"
        />
    <TextView
        android:id="@+id/limit_refresh_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/limit_count_down"
        android:text="Refresh times after"
        android:textColor="@color/color_0B6B9D"
        android:fontFamily="@font/cabin_bold"
        android:layout_marginTop="@dimen/dimen_10dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/limit_view_my_favorites_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/limit_refresh_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginHorizontal="@dimen/dimen_32dp"
        android:background="@drawable/shape_solid_white_stroke_a016e1_radius_20"
        >
        <TextView
            android:id="@+id/view_my_favorites_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/view_my_favorites"
            android:textSize="@dimen/dimen_20sp"
            android:fontFamily="@font/cabin_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_21dp"
            />
        <TextView
            android:id="@+id/view_my_favorites_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:text="@string/limit_view_my_favorites_content"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/cabin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_my_favorites_title"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:layout_marginStart="@dimen/dimen_21dp"
            app:layout_constraintEnd_toStartOf="@+id/view_my_favorites_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_32dp"
            />
        <ImageView
            android:id="@+id/view_my_favorites_right"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_32dp"
            android:src="@mipmap/icon_limit_view_my_favorites"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/limit_see_who_likes_me_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/limit_view_my_favorites_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginHorizontal="@dimen/dimen_32dp"
        android:background="@drawable/shape_solid_white_stroke_d91080_radius_20"
        >
        <TextView
            android:id="@+id/see_who_likes_me_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/see_who_likes_me"
            android:textSize="@dimen/dimen_20sp"
            android:fontFamily="@font/cabin_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginStart="@dimen/dimen_21dp"
            />
        <TextView
            android:id="@+id/see_who_likes_me_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_666666"
            android:text="@string/limit_see_who_likes_me_content"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/cabin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/see_who_likes_me_title"
            android:layout_marginTop="@dimen/dimen_7dp"
            android:layout_marginStart="@dimen/dimen_21dp"
            app:layout_constraintEnd_toStartOf="@+id/see_who_likes_me_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginEnd="@dimen/dimen_32dp"
            />
        <ImageView
            android:id="@+id/see_who_likes_me_right"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/dimen_32dp"
            android:src="@mipmap/icon_limit_see_who_likes_me"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>