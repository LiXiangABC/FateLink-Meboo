<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/want_turn_ons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_solid_white_radius_12"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/want_accept_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/want_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                >
                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/shape_im_want_dot"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="want..."
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/interregular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/im_want"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#0B6B9D"
                    android:fontFamily="@font/intermedium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="70dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/accept_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                app:layout_constraintTop_toBottomOf="@+id/want_container"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                >
                <View
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:background="@drawable/shape_im_want_dot"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="accept..."
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/interregular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="16dp"/>
                <LinearLayout
                    android:id="@+id/accept_child_show_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="82dp"
                    android:orientation="vertical"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/no_accept_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go ahead and explore with courage"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="@font/interregular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/want_container"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chat_turn_ons_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/want_accept_container"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/chat_turn_ons_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="@font/interregular"
                android:text="7 Turn-Ons in common"
                app:layout_constraintTop_toTopOf="parent"
                />
            <ImageView
                android:id="@+id/chat_turn_ons_arrow"
                android:layout_width="21dp"
                android:layout_height="9dp"
                android:src="@drawable/icon_full_down_arrow"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="4dp"
                />
            <io.rong.imkit.widget.TagCloudView
                android:id="@+id/chat_turn_ons_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:tcvBorder="4dp"
                app:tcvCanTagClick="false"
                app:tcvItemBorderHorizontal="5dp"
                app:tcvItemBorderVertical="5dp"
                app:tcvShowEndText="false"
                app:tcvSingleLine="false"
                app:tcvTextColor="#333333"
                app:tcvTextSize="12"
                app:tcvBackground="@drawable/shape_tag_bg"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chat_turn_ons_arrow"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/want_turn_ons_container"
        android:visibility="gone"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewHead"
            app:layout_constraintTop_toTopOf="@+id/ivLoveLeft"
            app:layout_constraintBottom_toBottomOf="@+id/ivLoveLeft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintWidth_percent="0.493"
            android:layout_width="0dp"
            android:layout_marginHorizontal="95dp"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivOtherImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:riv_oval="true"
                android:scaleType="centerCrop"
                android:elevation="1px"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/white"
                android:layout_marginEnd="-12dp"
                tools:src="@drawable/ease_default_image" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ivMyImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:riv_oval="true"
                android:layout_marginStart="-12dp"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/white"
                tools:src="@drawable/ease_default_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivLoveLeft"
            app:layout_constraintEnd_toStartOf="@+id/viewHead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="-27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,55:118"
            app:layout_constraintWidth_percent="0.1466"
            android:src="@mipmap/icon_love_left"/>
        <ImageView
            android:id="@+id/ivLoveRight"
            app:layout_constraintStart_toEndOf="@+id/viewHead"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="-25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,55:118"
            app:layout_constraintWidth_percent="0.1466"
            android:src="@mipmap/icon_love_right"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_chat_matched"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivLoveLeft"
            app:layout_constraintStart_toStartOf="@+id/ivLoveLeft"
            app:layout_constraintEnd_toEndOf="@+id/ivLoveRight"
            />
        <ImageView
            android:layout_width="205dp"
            android:layout_height="18dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_chat_matched_text"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLoveLeft"
            app:layout_constraintStart_toStartOf="@+id/ivLoveLeft"
            app:layout_constraintEnd_toEndOf="@+id/ivLoveRight"
            app:tint="#FF3437" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>