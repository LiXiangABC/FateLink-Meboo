<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_my_profile_bg">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <io.rong.imkit.widget.TitleBar
            android:id="@+id/rc_title_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:right_icon="@drawable/rc_title_bar_more"
            app:titleMargin="0dp" />
        <io.rong.imkit.widget.NewTitleBar
            android:id="@+id/view_new_title_bar"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </FrameLayout>


    <ViewFlipper
        android:id="@+id/rc_base_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />
</LinearLayout>