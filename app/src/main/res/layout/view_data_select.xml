<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="200dp">

    <LinearLayout
        android:id="@+id/view_data_select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="200dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.contrarywind.view.WheelView
            android:id="@+id/wheel1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_5dp"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wheel2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_5dp"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wheel3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/dimen_5dp"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:id="@+id/view_data_select_top_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="h,12:1"
        app:layout_constraintTop_toTopOf="@+id/view_data_select_bg" />

    <View
        android:id="@+id/view_data_select_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_data_select_bg"
        app:layout_constraintDimensionRatio="h,12:1" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view_data_select_bottom_bg"
        app:layout_constraintEnd_toEndOf="@+id/view_data_select_bg"
        app:layout_constraintStart_toStartOf="@+id/view_data_select_bg"
        app:layout_constraintTop_toBottomOf="@+id/view_data_select_top_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>