<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conPayErrorBox"
    tools:background="#ccc">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_pay_failed_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/txtPayErrorTipTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/cabin_bold"
            android:textColor="@color/color_001912"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/txtPayErrorTipSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/cabin_regular"
            android:textColor="#333333"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginHorizontal="27dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipTitle"
            tools:text="@string/txt_pay_error_tip_content_one" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPayErrorTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipSubTitle" />

        <TextView
            android:id="@+id/txtPayErrorTipContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin_regular"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvPayErrorTip"
            tools:text="SubTitle" />

        <TextView
            android:id="@+id/txtPayErrorTipContactEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cabin_medium"
            android:textColor="@color/color_44F3C4"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipContact"
            tools:text="@string/email_address_logo" />

        <TextView
            android:id="@+id/txtPayErrorTipBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_member_buy_button_bg"
            android:fontFamily="@font/cabin_medium"
            android:gravity="center"
            android:textColor="@color/color_001912"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipContactEmail"
            tools:text="Ok" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipBtn"
            />
        <TextView
            android:id="@+id/txtPayErrorTipAbandonBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abandon"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/cabin_semibold"
            app:layout_constraintTop_toBottomOf="@+id/txtPayErrorTipBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>