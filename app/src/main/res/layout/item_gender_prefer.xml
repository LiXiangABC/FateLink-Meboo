<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/item_logo_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_17dp"
        android:layout_marginHorizontal="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:elevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/Transparent"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/dimen_1dp"
            app:riv_corner_radius="@dimen/dimen_17dp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/color_202323"
        app:layout_constraintTop_toBottomOf="@+id/item_logo_out"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:fontFamily="@font/interregular"
        />
</androidx.constraintlayout.widget.ConstraintLayout>