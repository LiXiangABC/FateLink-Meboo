<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picture_color_black"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/private_album_view"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/img_done"
        android:layout_marginBottom="@dimen/dimen_56dp"
        android:layout_marginTop="@dimen/dimen_56dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/img_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dimen_36dp"
        android:gravity="center"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginEnd="12dp"
        android:text="@string/done"
        android:background="@drawable/shape_solid_yellow_radius_24"
        android:textColor="@color/color_001912"
        android:textSize="@dimen/dimen_15sp"
        android:fontFamily="@font/intersemibold" />

</androidx.constraintlayout.widget.ConstraintLayout>