<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/hour_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_hour_decade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_hour_unit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/hour_separation"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text=":"
        android:fontFamily="@font/cabin_bold"
        android:layout_marginHorizontal="4dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_min_decade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_min_unit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"
            android:layout_marginStart="5dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text=":"
        android:fontFamily="@font/cabin_bold"
        android:layout_marginHorizontal="4dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_sec_decade"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tv_sec_unit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="0"
            android:fontFamily="@font/cabin_bold"
            android:background="@drawable/shape_count_down_bg"
            android:gravity="center"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</LinearLayout>