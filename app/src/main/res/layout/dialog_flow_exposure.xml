<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_63dp"
        android:background="@drawable/shape_exposure_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_top_logo">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/dimen_58dp"
            android:layout_height="@dimen/dimen_48dp"
            android:src="@mipmap/icon_black_close_no_stroke"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingHorizontal="@dimen/dimen_20dp"
            android:paddingTop="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/dimen_10dp"/>
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_80dp"
            android:fontFamily="@font/interbold"
            android:text="@string/in_traffic_exposure"
            android:textColor="@color/color_202323"
            android:textSize="@dimen/dimen_18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_26dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:fontFamily="@font/intermedium"
            android:gravity="center"
            android:text="@string/exposure_tips"
            android:textColor="@color/color_080808"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        <ImageView
            android:id="@+id/dialog_trend_chart"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_150dp"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_exposure_center_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_content" />
        <TextView
            android:id="@+id/txt_pre_exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dialog_trend_chart"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/pre_exposure"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_999999"
            android:fontFamily="@font/intermedium"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintRight_toLeftOf="@+id/txt_post_exposure"
            />
        <TextView
            android:id="@+id/txt_post_exposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dialog_trend_chart"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/post_exposure"
            android:textSize="@dimen/dimen_14sp"
            android:textColor="@color/color_E060ED"
            android:fontFamily="@font/intermedium"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintLeft_toRightOf="@+id/txt_pre_exposure"
            />
        <TextView
            android:id="@+id/txt_purchase_now"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_48dp"
            android:background="@drawable/shape_exposure_button"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:text="@string/purchase_now"
            android:fontFamily="@font/intermedium"
            app:layout_constraintTop_toBottomOf="@+id/txt_pre_exposure"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_25dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/dialog_top_logo"
        android:layout_width="246dp"
        android:layout_height="@dimen/dimen_132dp"
        android:src="@mipmap/icon_exposure_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="134dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>