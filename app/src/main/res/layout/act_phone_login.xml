<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewMain"
    android:background="@drawable/icon_my_profile_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dimen_48dp"
            android:layout_height="@dimen/dimen_48dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@mipmap/icon_black_back_normal" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_48dp"
            android:fontFamily="@font/cabin_medium"
            android:textColor="#1A1B1E"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/phone_number" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone_outside_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewTitle"
        >

        <TextView
            android:id="@+id/title_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/interbold"
            android:text="@string/what_your_number"
            android:textColor="@color/color_202323"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/phone_container"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:background="@drawable/shape_stroke_gray_solid_white_radius_4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_phone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_19dp"
                android:fontFamily="@font/interregular"
                android:text="+1"
                android:textColor="@color/color_CDCDCD"
                android:textSize="@dimen/dimen_14sp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_weight="1"
                android:maxLength="10"
                android:background="@color/transparent"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:fontFamily="@font/interbold"
                android:textColorHint="@color/color_CDCDCD"
                android:textSize="@dimen/dimen_14sp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/phone_tips"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_33dp"
            android:text="@string/phone_number_tips"
            android:textColor="@color/color_202323"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_container" />
        <LinearLayout
            android:id="@+id/phone_next_container"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_56dp"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_48dp"
            android:layout_marginEnd="@dimen/dimen_33dp"
            android:background="@drawable/shape_solid_light_gray_radius_26"
            android:textColor="@color/selector_button_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:enabled="false"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/phone_tips">
            <TextView
                android:id="@+id/phone_next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_56dp"
                android:gravity="center"
                android:text="@string/next"
                android:enabled="false"
                android:fontFamily="@font/interbold"
                android:textColor="@color/selector_button_color"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/phone_next_anim"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="false"
                app:lottie_fileName="next_loading.json"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:visibility="gone"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/code_outside_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/title_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/interbold"
            android:text="@string/verify_your_number"
            android:textColor="@color/color_202323"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:textSize="@dimen/dimen_18sp"
            android:textColor="@color/color_BBBBBB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_code"
            />

        <com.crush.view.codeview.VerificationCodeView
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15dp"
            app:layout_constraintTop_toBottomOf="@+id/text_login_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:icv_et_bg_focus="@drawable/shape_icv_et_bg_focus"
            app:icv_et_bg_normal="@drawable/shape_icv_et_bg_normal"
            app:icv_et_divider_drawable="@drawable/shape_divider_identifying"
            app:icv_et_number="6"
            app:icv_et_pwd="false"
            app:icv_et_pwd_radius="5dp"
            app:icv_et_text_color="@color/black"
            app:icv_et_width="@dimen/dimen_45dp"
            android:layout_marginStart="@dimen/dimen_33dp"/>
        <TextView
            android:id="@+id/tip_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:fontFamily="@font/interregular"
            android:text="@string/verify_tip"
            android:textColor="@color/color_202323"
            android:textSize="@dimen/dimen_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_code"
            />
        <com.custom.base.view.SendCodeView
            android:id="@+id/act_login_code"
            android:layout_marginTop="@dimen/dimen_40dp"
            app:layout_constraintTop_toBottomOf="@+id/tip_code"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selector_send_code"
            android:textSize="15sp"
            android:text="@string/resend_code"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/resend_code_anim"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="false"
            app:lottie_fileName="resend_loading.json"
            android:visibility="gone"
            android:layout_marginStart="@dimen/dimen_5dp"
            app:layout_constraintLeft_toRightOf="@+id/act_login_code"
            app:layout_constraintTop_toTopOf="@+id/act_login_code"
            app:layout_constraintBottom_toBottomOf="@+id/act_login_code"
            />
        <View
            android:id="@+id/bottom_line"
            app:layout_constraintLeft_toLeftOf="@+id/act_login_code"
            app:layout_constraintRight_toRightOf="@+id/act_login_code"
            app:layout_constraintTop_toBottomOf="@+id/act_login_code"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/color_202323"
            />

        <LinearLayout
            android:id="@+id/code_next_container"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_56dp"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_48dp"
            android:layout_marginEnd="@dimen/dimen_33dp"
            android:background="@drawable/shape_solid_light_gray_radius_26"
            android:textColor="@color/selector_button_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:enabled="false"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/act_login_code">
            <TextView
                android:id="@+id/code_next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_56dp"
                android:gravity="center"
                android:text="@string/next"
                android:enabled="false"
                android:fontFamily="@font/interbold"
                android:textColor="@color/selector_button_color"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/code_next_anim"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                app:lottie_loop="true"
                app:lottie_autoPlay="false"
                app:lottie_fileName="next_loading.json"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>