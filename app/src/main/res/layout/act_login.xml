<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_login_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:alpha="0.6"
        android:visibility="gone"
        android:background="@drawable/shape_gradation_index_bottom_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_marginTop="@dimen/dimen_300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/img_login_logo"
            android:layout_width="@dimen/dimen_86dp"
            android:layout_height="@dimen/dimen_86dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintBottom_toTopOf="@+id/img_login_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <ImageView
            android:id="@+id/img_login_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_42dp"
            android:layout_marginBottom="@dimen/dimen_28dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_login_text"
            app:layout_constraintBottom_toTopOf="@+id/img_login_text1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/img_login_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_46dp"
            android:layout_marginBottom="@dimen/dimen_17dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_login_text1"
            app:layout_constraintBottom_toTopOf="@+id/txt_login_google"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/txt_login_google"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_13dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@drawable/shape_gradation_login_button"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/txt_login_phone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:src="@mipmap/icon_login_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_52dp"
                android:fontFamily="@font/interregular"
                android:gravity="center"
                android:text="@string/login_google"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/action_loading"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_fileName="next_loading.json"
                app:lottie_loop="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/txt_login_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/agreement_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="@dimen/dimen_26dp"
                android:layout_height="@dimen/dimen_26dp"
                android:layout_marginStart="@dimen/dimen_36dp"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:src="@mipmap/icon_login_phone"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_52dp"
                android:fontFamily="@font/interregular"
                android:gravity="center"
                android:text="@string/login_phone"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/agreement_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CheckBox
                android:id="@+id/cb_user_agreement"
                android:layout_width="@dimen/dimen_26dp"
                android:layout_height="@dimen/dimen_26dp"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:adjustViewBounds="true"
                android:background="@drawable/selector_user_login_check_status"
                android:button="@null"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/txt_login_protocol" />

            <TextView
                android:id="@+id/txt_login_protocol"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/interregular"
                android:gravity="center"
                android:text="@string/login_protocol"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4dp"
                android:fontFamily="@font/interregular"
                android:text="@string/login_protocol_top"
                android:textColor="@color/color_8B8B8B"
                android:textSize="@dimen/dimen_15sp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/txt_login_protocol"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/viewRecallHint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_login_delete_tip"
            android:layout_marginHorizontal="@dimen/dimen_14dp"
            android:paddingBottom="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_54dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dimen_71dp"
                android:layout_height="@dimen/dimen_70dp"
                android:layout_marginHorizontal="@dimen/dimen_14dp"
                android:layout_marginStart="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:src="@mipmap/icon_login_recall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_recall_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_14sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/intersemibold"
                android:layout_marginStart="@dimen/dimen_17dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dimen_17dp"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                android:text="Your account has been deleted!"/>
            <TextView
                android:id="@+id/tvRecallContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:lineHeight="13.31dp"
                android:fontFamily="@font/interregular"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/dimen_17dp"
                android:textSize="@dimen/dimen_11sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_recall_title"
                android:layout_marginStart="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                tools:text="We will retain your gender and either your email or phone number for three\n months before permanently deleting them.All other data has been securely erased."/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="@dimen/dimen_17dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_image"
                android:textSize="@dimen/dimen_12sp"
                android:layout_marginStart="@dimen/dimen_17dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintStart_toEndOf="@+id/iv_image"
                android:text="@string/recall_loginghint_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
