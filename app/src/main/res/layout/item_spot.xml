<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="20dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:id="@+id/user_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.youth.banner.Banner
            android:id="@+id/item_user_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:banner_auto_loop="false"
            app:banner_infinite_loop="false" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/left_click"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_click"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/right_click"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/right_click"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_0dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                app:layout_constraintBottom_toTopOf="@+id/bottom_click"
                app:layout_constraintLeft_toRightOf="@+id/left_click"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bottom_click"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_200dp"
                android:background="@drawable/shape_gradation_index"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <FrameLayout
            android:id="@+id/left_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="129dp"
                android:layout_height="@dimen/dimen_83dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:rotation="30"
                android:src="@mipmap/icon_nope" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/right_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="163dp"
                android:layout_height="@dimen/dimen_105dp"
                android:layout_gravity="start"
                android:src="@mipmap/icon_like"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginStart="@dimen/dimen_20dp"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/item_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_70_b940f8_radius_11"
                android:fontFamily="@font/cabin_regular"
                android:paddingVertical="@dimen/dimen_4dp"
                android:paddingHorizontal="@dimen/dimen_6dp"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:text="@string/online"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:drawablePadding="@dimen/dimen_3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:drawableStartCompat="@mipmap/icon_white_circle" />

            <TextView
                android:id="@+id/item_positioning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_70_ed3fb7_radius_11"
                android:textSize="@dimen/dimen_12sp"
                android:fontFamily="@font/cabin_regular"
                android:drawablePadding="@dimen/dimen_3dp"
                android:paddingHorizontal="@dimen/dimen_6dp"
                android:paddingVertical="@dimen/dimen_4dp"
                android:text="@string/nearby"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dimen_12dp"
                app:drawableStartCompat="@mipmap/icon_landmark"
                app:layout_constraintLeft_toRightOf="@+id/item_online"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:layout_marginTop="@dimen/dimen_26dp"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_28sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/item_member_logo"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:src="@mipmap/icon_user_member_logo_index"
                app:layout_constraintLeft_toRightOf="@+id/item_name"
                app:layout_constraintTop_toTopOf="@+id/item_name"
                app:layout_constraintBottom_toBottomOf="@+id/item_name"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:visibility="gone"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_name"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="@dimen/dimen_140dp"
                >

                <com.crush.view.TagCloudView
                    android:id="@+id/item_tag_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tcvBorder="8dp"
                    app:tcvCanTagClick="false"
                    app:tcvItemBorderHorizontal="8dp"
                    app:tcvItemBorderVertical="6dp"
                    app:tcvShowEndText="false"
                    app:tcvSingleLine="true"
                    app:tcvTextColor="@color/white"
                    app:tcvTextSize="14"
                    app:tcvFontFamily="@font/cabin_regular"
                    app:tcvBackground="@drawable/shape_0d000f_radius_10"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/turn_ons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_6dp"
                    android:background="@drawable/shape_solid_index_turn_ons_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/txt_turn_ons_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_4dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_14sp"
                        android:drawableStart="@mipmap/icon_user_turn_ons_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/index_turn_ons_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/icon_turn_ons_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_index_turn_ons_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_51dp"
            android:layout_marginTop="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_51dp"
            android:src="@mipmap/icon_turn_ons_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/index_turn_ons_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_is_it_your_desire"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20sp"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toBottomOf="@+id/img_index_turn_ons_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="t_o_television.json"
            app:lottie_loop="true"
            app:layout_constraintTop_toBottomOf="@+id/index_turn_ons_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_go_choose_turn_ons">

        </com.airbnb.lottie.LottieAnimationView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_go_choose_turn_ons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_54dp"
            android:layout_marginStart="@dimen/dimen_33dp"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_33dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:background="@drawable/shape_solid_black_radius_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/cabin_bold"
                android:text="@string/start_quiz"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                android:drawablePadding="@dimen/dimen_10dp"
                android:drawableStart="@mipmap/icon_user_turn_ons_white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/index_location_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/index_location_container_bg"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/location_no_adid"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dimen_12dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dimen_15dp"
            app:layout_constraintBottom_toTopOf="@+id/item_turn_on_location"
            >

            <ImageView
                android:id="@+id/item_location_logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_258dp"
                android:visibility="gone"
                android:src="@mipmap/icon_request_logo"
                android:layout_marginHorizontal="@dimen/dimen_48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/item_location_title_child"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/want_to_create_real_touch"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/dimen_24dp"
                android:fontFamily="@font/cabin_bold"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_23dp"
                app:layout_constraintTop_toBottomOf="@+id/item_location_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />


            <TextView
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:text="@string/want_to_create_real_touch_content"
                android:textColor="@color/color_666666"
                android:fontFamily="@font/cabin_regular"
                android:textSize="@dimen/dimen_16sp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginHorizontal="@dimen/dimen_23dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_location_title_child"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="@dimen/dimen_53dp"
            android:layout_height="@dimen/dimen_58dp"
            android:layout_marginEnd="@dimen/dimen_4dp"
            android:layout_marginBottom="@dimen/dimen_58dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_turn_on_location"
            android:src="@mipmap/icon_min_love_heart"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_turn_on_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginHorizontal="@dimen/dimen_25dp"
            android:layout_marginBottom="@dimen/dimen_50dp"
            android:background="@drawable/shape_solid_pink_gradient_radius_30"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_14dp"
                android:fontFamily="@font/cabin_bold"
                android:text="@string/turn_on_location"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_16sp"
                android:gravity="center"
                android:drawablePadding="@dimen/dimen_20dp"
                android:drawableStart="@mipmap/icon_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    <include-->
<!--        android:id="@+id/feedback_container"-->
<!--        android:visibility="gone"-->
<!--        layout="@layout/layout_index_continuous_pass"/>-->

</androidx.cardview.widget.CardView>
