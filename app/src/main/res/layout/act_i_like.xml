<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/icon_i_like_bg">



    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/i_like_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_tips"
        app:srlDragRate="0.3">

        <com.crush.view.MyClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/i_like_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:overScrollMode="never" />


        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:id="@+id/wlm_refresh_layout_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlTextNothing="@string/i_like_expire_tips"
            app:srlTextSizeTitle="@dimen/dimen_12sp" />
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_empty"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title"
        android:layout_marginBottom="@dimen/dimen_100dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/img_wlm_empty"
            android:layout_width="122dp"
            android:layout_height="@dimen/dimen_140dp"
            android:src="@mipmap/icon_empty_i_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/txt_empty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No crush in sight?"
            android:textSize="@dimen/dimen_20sp"
            android:textColor="@color/color_202323"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_wlm_empty"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/cabin_semibold"
            />
        <TextView
            android:id="@+id/txt_empty_tip"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginHorizontal="@dimen/dimen_44dp"
            android:fontFamily="@font/cabin_regular"
            android:gravity="center"
            android:text="@string/i_like_empty_tip"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_empty_title" />

        <TextView
            android:id="@+id/txt_see_your_admirers"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_52dp"
            android:layout_marginStart="@dimen/dimen_88dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_88dp"
            android:background="@drawable/shape_solid_pink_radius_26"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            android:text="@string/see_your_admirers"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_empty_tip" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/top_tips"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="@string/i_like_top_tip"
        android:fontFamily="@font/cabin_regular"
        android:textColor="@color/color_9C9FA6"
        android:textSize="@dimen/dimen_15sp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title"
        android:paddingBottom="@dimen/dimen_3dp"
        android:visibility="gone"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/i_like_back_layout"
            android:layout_width="@dimen/dimen_56dp"
            android:layout_height="44dp"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_12dp"
            android:paddingHorizontal="@dimen/dimen_16dp"
            android:src="@drawable/icon_back_black_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            android:text="@string/i_like"
            android:textColor="@color/Black"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="@+id/i_like_back_layout"
            app:layout_constraintBottom_toBottomOf="@+id/i_like_back_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
