<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/push_container"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_push_bg"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="#1A000000"
        android:translationY="20dp"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <View
            android:id="@+id/out_side_view"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/shape_purple_circle_stroke"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_avatar"
            app:layout_constraintLeft_toLeftOf="@+id/dialog_avatar"
            app:layout_constraintRight_toRightOf="@+id/dialog_avatar"
            app:layout_constraintTop_toTopOf="@+id/dialog_avatar" />

        <ImageView
            android:id="@+id/dialog_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="18dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/dialog_avatar"
            app:layout_constraintRight_toLeftOf="@+id/right_container"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/intersemibold"
                android:maxLines="1"
                android:textColor="#080808"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/interregular"
                android:lineSpacingExtra="1dp"
                android:maxLines="2"
                android:textColor="#84868E"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@+id/dialog_avatar"
                app:layout_constraintRight_toLeftOf="@+id/right_container"
                app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/right_container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dialog_albums_container"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="11dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_push_bg"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_solid_white_radius_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/dialog_user_photo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="8dp"/>

                <ImageView
                    android:id="@+id/dialog_private_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_push_private_logo"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/dialog_user_photo"
                    app:layout_constraintLeft_toLeftOf="@+id/dialog_user_photo"
                    app:layout_constraintRight_toRightOf="@+id/dialog_user_photo"
                    app:layout_constraintTop_toTopOf="@+id/dialog_user_photo" />

                <ImageView
                    android:id="@+id/dialog_video_play_logo"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/icon_play_video"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/dialog_user_photo"
                    app:layout_constraintLeft_toLeftOf="@+id/dialog_user_photo"
                    app:layout_constraintRight_toRightOf="@+id/dialog_user_photo"
                    app:layout_constraintTop_toTopOf="@+id/dialog_user_photo" />

                <ImageView
                    android:id="@+id/dialog_video_play_private_logo"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@mipmap/icon_play_video"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/dialog_user_photo"
                    app:layout_constraintRight_toRightOf="@+id/dialog_user_photo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>