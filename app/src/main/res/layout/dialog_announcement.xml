<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:background="@mipmap/icon_dialog_announcement_bg">

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:fontFamily="@font/cabin_bold"
            android:gravity="center"
            tool:text="Service Interruption Recovery and Compensation"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.core.widget.NestedScrollView
            android:id="@+id/popup_center_container"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:minHeight="420dp"
            android:maxHeight="500dp"
            android:background="@drawable/shape_announcement_center_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_one_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:fontFamily="@font/cabin_regular"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    tool:text="Dear User,\Auramix experienced a temporary service interruption due to a server attack. The issue has been resolved, and all services are now restored. We apologize for any inconvenience.\n\nYour membership benefits and purchased products are unaffected. To thank you and apologize, we offer you the following complimentary products:"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pp_container"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:background="@drawable/shape_announcement_center_bg"
                    app:layout_constraintEnd_toStartOf="@+id/pv_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_one_content">

                    <ImageView
                        android:id="@+id/img_pp"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="@dimen/dimen_9dp"
                        android:src="@mipmap/icon_announcement_pp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_pp_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin_bold"
                        android:text="x1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_pp"
                        app:layout_constraintEnd_toEndOf="@+id/img_pp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:layout_marginBottom="@dimen/dimen_9dp"
                        android:fontFamily="@font/cabin_regular"
                        android:text="Private Photos"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_pp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pv_container"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginEnd="@dimen/dimen_16dp"
                    android:background="@drawable/shape_announcement_center_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pp_container"
                    app:layout_constraintTop_toBottomOf="@+id/txt_one_content">

                    <ImageView
                        android:id="@+id/img_pv"
                        android:layout_width="41dp"
                        android:layout_height="41dp"
                        android:layout_marginTop="@dimen/dimen_9dp"
                        android:src="@mipmap/icon_announcement_pv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_pv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cabin_bold"
                        android:text="x1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14dp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_pv"
                        app:layout_constraintEnd_toEndOf="@+id/img_pv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:layout_marginBottom="@dimen/dimen_9dp"
                        android:fontFamily="@font/cabin_regular"
                        android:text="Private Videos"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_14dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_pv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_two_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_15dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:fontFamily="@font/cabin_regular"
                    android:lineSpacingExtra="@dimen/dimen_4dp"
                    tool:text="We hope these gifts enhance your experience and help you find your ideal match on Auramix. \n\nThank you for your understanding and support.\n\nSincerely,\nThe Auramix Team"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pp_container" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/txt_i_know_it"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_48dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/shape_announcement_button_bg"
            android:fontFamily="@font/cabin_medium"
            android:gravity="center"
            android:text="OK,I Know it"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popup_center_container" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>