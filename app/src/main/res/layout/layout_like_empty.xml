<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dimen_150dp"
    android:layout_marginHorizontal="@dimen/dimen_37dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_like_empty_logo"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_fileName="no_card_anim.json"
        app:lottie_loop="true"
        />
    <ImageView
        android:id="@+id/img_white_like_empty_logo"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/icon_no_card_index"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/empty_title"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interbold"
        android:text="@string/did_you_miss_out_on_many_people"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        android:textSize="@dimen/dimen_16sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/empty_tip"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        android:fontFamily="@font/interregular"
        android:gravity="center"
        android:text="@string/all_sweethearts_who_approach_you_are_fair_game"
        android:textColor="@color/color_84868E"
        android:textSize="@dimen/dimen_15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_title" />

    <TextView
        android:id="@+id/empty_go_wlm"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_52dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginHorizontal="@dimen/dimen_50dp"
        app:layout_constraintTop_toBottomOf="@+id/empty_tip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_gradation_login_button"
        android:fontFamily="@font/intersemibold"
        android:text="@string/go_flirt_with_all"
        android:gravity="center"
        android:textColor="@color/color_001912"
        android:textSize="@dimen/dimen_16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>