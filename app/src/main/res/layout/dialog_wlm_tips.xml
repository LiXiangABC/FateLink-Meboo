<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tip_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_140dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/icon_wlm_tip_dialog_bg"
        android:layout_marginTop="@dimen/dimen_67dp"
        android:layout_marginHorizontal="@dimen/dimen_37dp"
        >
        <ImageView
            android:id="@+id/dialog_title"
            android:layout_width="191dp"
            android:layout_height="@dimen/dimen_22dp"
            android:src="@mipmap/icon_wlm_tip_dialog_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_35dp"
            />
        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_14sp"
            android:fontFamily="@font/cabin_regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/what_is_who_likes_me"
            android:layout_marginTop="@dimen/dimen_13dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/dimen_30dp"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>