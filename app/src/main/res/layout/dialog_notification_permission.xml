<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@mipmap/bg_dialog_permission"
        >
        <ImageView
            android:id="@+id/dialog_cancel"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:src="@mipmap/icon_black_close_normal"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/dimen_15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            />
        <ImageView
            android:id="@+id/dialog_top_logo"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_248dp"
            android:src="@mipmap/icon_notification_top_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_cancel"
            android:layout_marginHorizontal="@dimen/dimen_36dp"
            />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_top_logo"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:text="@string/want_to_stay_in_touch"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_30sp"
            android:fontFamily="@font/cabin_bold"
            />
        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_title"
            android:layout_marginStart="@dimen/dimen_25dp"
            android:layout_marginEnd="@dimen/dimen_25dp"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:gravity="center"
            android:textSize="@dimen/dimen_16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/cabin_regular"
            android:text="@string/notifications_content"
            />
        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_60dp"
            android:textColor="@color/white"
            android:background="@drawable/shape_solid_pink_gradient_radius_30"
            android:textSize="@dimen/dimen_16sp"
            android:fontFamily="@font/cabin_semibold"
            android:text="@string/turn_on_notifications"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_content"
            android:layout_marginTop="@dimen/dimen_45dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_25dp"
            android:layout_marginEnd="@dimen/dimen_25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dimen_30dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>