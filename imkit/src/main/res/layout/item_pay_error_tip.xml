<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:background="@drawable/shape_f6e3ff_radius_13"
        >

        <ImageView
            android:id="@+id/imgItemPayErrorTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@mipmap/img_pay_error_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/txtItemPayErrorTipTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Title"
            android:textSize="16sp"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/cabin_semibold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgItemPayErrorTip"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/txtItemPayErrorTipContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@string/txt_pay_error_tip_content_one"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/cabin_regular"
            android:textColor="#999999"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtItemPayErrorTipTitle"
            app:layout_constraintStart_toEndOf="@+id/imgItemPayErrorTip"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>